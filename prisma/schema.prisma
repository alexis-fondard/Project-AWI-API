// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["windows","native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
//TOUTES LES INFORMATIONS SUIVANTE CORRESPONDENT A AVANT LE REWORK DE LA BD
//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  uptadedAt DateTime @updatedAt

  email String @unique
  hash String

  firstName String?
  lastName String?

  @@map("users")
}



model Jeu {
  id Int @id @default(autoincrement())
  nom String
  label_type_jeu String
  type_jeu Type_Jeu @relation(fields:[label_type_jeu],references:[label])
  jeu_zone Jeu_Zone[]

  @@map("jeux")
}

model Type_Jeu {
  label String @id

  jeu Jeu[]

  @@map("type_jeu")
}

model Jeu_Zone {
  jeu Jeu @relation(fields: [id_jeu], references: [id])
  id_jeu Int
  zone Zone @relation(fields: [label_zone], references: [label])
  label_zone String 

  @@id([label_zone,id_jeu])

  @@map("jeu_zone")
}

model Benevole_Zone {
  benevole Benevole @relation(fields: [id_benevole], references: [id])
  id_benevole Int
  zone Zone @relation(fields: [label_zone], references: [label])
  label_zone String 
  debut DateTime
  fin DateTime

  @@id([id_benevole,label_zone,debut])

  @@map("benevole_zone")
}


//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
//TOUTES LES INFORMATIONS SUIVANTE CORRESPONDENT A APRES LE REWORK DE LA BD
//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

model Benevole {
  id Int @id @default(autoincrement())
  prenom String
  nom String
  email String @unique
  mdp String 
  isAdmin Boolean @default(false)

  zones Benevole_Zone[]
  affectationCreneau AffectationCreneau[]
  

  @@map("benevoles")
}

model Zone {
  label String @id

  benevoles Benevole_Zone[]
  jeu Jeu_Zone[]
  festival FestivalZone[]

  @@map("zones")
}

model Festival {
  id Int @id @default(autoincrement())
  nom String
  annee Int
  isActive Boolean

  zone FestivalZone[]
  jours Jour[]

  @@map("festivals")
}


model FestivalZone {
  id_festivalZone Int @id @default(autoincrement())

  festival Festival @relation(fields: [id_festival], references: [id])
  id_festival Int
  zone Zone @relation(fields: [label_zone], references: [label])
  label_zone String 

  nbBenevolesNecessaires Int

  affectations AffectationCreneau[]

  @@map("festival_zone")
}

model Jour {
  id Int @id @default(autoincrement())
  festival Festival @relation(fields: [id_festival], references: [id])
  id_festival Int

  date DateTime
  nom String
  heureOuverture Int
  minuteOuverture Int
  heureFermeture Int
  minuteFermeture Int

  creneaux Creneau[]

  @@map("jours")
}


model Creneau {
  id Int @id @default(autoincrement())
  jour Jour @relation(fields: [id_jour], references: [id])
  id_jour Int 

  heureDebut Int
  minuteDebut Int
  heureFin Int
  minuteFin Int

  affectationCreneau AffectationCreneau[]

  @@map("creneaux")
}


model AffectationCreneau {
  creneau Creneau @relation(fields: [id_creneau], references: [id])
  id_creneau Int
  benevole Benevole @relation(fields: [id_benevole], references: [id])
  id_benevole Int  
  festivalZone FestivalZone @relation(fields: [id_festivalZone], references: [id_festivalZone])
  id_festivalZone Int

  @@id([id_creneau,id_benevole,id_festivalZone])

  @@map("affectationCreneau")
}
